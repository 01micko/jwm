<?xml version="1.0"?>

<JWM>

	<!-- The root menu, if this is undefined you will not get a menu. -->
	<RootMenu label="JWM">
		<Program icon="rxvt.xpm" label="Terminal">rxvt</Program>
		<Menu icon="folder.xpm" label="Applications">
			<Program icon="dia.xpm" label="Dia">dia</Program>
			<Program icon="gimp.xpm" label="Gimp">gimp</Program>
			<Program icon="xine.xpm" label="gxine">gxine</Program>
			<Program icon="xmms.xpm" label="XMMS">xmms</Program>
		</Menu>
		<Menu icon="folder.xpm" label="Network">
			<Program icon="firefox.xpm" label="Firefox">firefox</Program>
			<Program icon="gaim.xpm" label="Gaim">gaim</Program>
			<Program label="gFTP">gftp</Program>
			<Program label="gnutella" icon="gnutella.xpm">gtk-gnutella</Program>
		</Menu>
		<Menu icon="folder.xpm" label="Utilities">
			<Program>xfontsel</Program>
			<Program icon="xmag.xpm">xmag</Program>
		</Menu>
		<Menu icon="folder.xpm" label="Misc">
			<Exit confirm="true" label="Exit to Terminal">rxvt</Exit>
		</Menu>
		<Separator/>
		<Restart icon="restart.xpm"/>
		<Exit confirm="true" icon="exit.xpm"/>
	</RootMenu>

	<Group>
		<Class>Gaim</Class>
		<Option>sticky</Option>
	</Group>

	<Group>
		<Class>xmms</Class>
		<Option>icon:xmms.xpm</Option>
	</Group>

	<Border>
		<Font>FreeSans-12:bold</Font>
		<Width>5</Width>
		<Height>20</Height>
		<Foreground>black</Foreground>
		<Background>#DCDAD5</Background>
		<ActiveForeground>white</ActiveForeground>
		<ActiveBackground>#4A5966</ActiveBackground>
	</Border>

	<Tray autohide="false">
		<Font>FreeSans-12:bold</Font>
		<Width>0</Width>
		<Height>28</Height>
		<Alignment>center</Alignment>
		<Foreground>black</Foreground>
		<Background>#DCDAD5</Background>
		<ActiveForeground>black</ActiveForeground>
		<ActiveBackground>#8899AA</ActiveBackground>
	</Tray>

	<Pager enabled="true">
		<Outline>black</Outline>
		<Foreground>#DCDAD5</Foreground>
		<Background>#888888</Background>
		<ActiveForeground>#8899AA</ActiveForeground>
		<ActiveBackground>#3A4956</ActiveBackground>
	</Pager>

	<Load enabled="true">
		<Program>xload</Program>
		<Outline>black</Outline>
		<Foreground>red</Foreground>
		<Background>#DCDAD5</Background>
	</Load>

	<Clock enabled="true">
		<Program>xclock</Program>
	</Clock>

	<Popup enabled="true">
		<Font>FreeSans-10</Font>
		<Outline>black</Outline>
		<Foreground>black</Foreground>
		<Background>yellow</Background>
	</Popup>

	<Menu>
		<Font>FreeSans-12:bold</Font>
		<Foreground>black</Foreground>
		<Background>#DCDAD5</Background>
		<ActiveForeground>white</ActiveForeground>
		<ActiveBackground>#3A4956</ActiveBackground>
	</Menu>

	<Icons>
		<IconPath>$HOME/.icons</IconPath>
	</Icons>

	<StartupCommand>
		xli -onroot /export0/images/formulae.jpg
	</StartupCommand>

	<!-- Number of virtual desktops -->
	<DesktopCount>4</DesktopCount>

	<!-- Double click speed (in milliseconds) -->
	<DoubleClickSpeed>400</DoubleClickSpeed>

	<!-- Double click delta (in pixels) -->
	<DoubleClickDelta>2</DoubleClickDelta>

	<!-- The focus model (sloppy or click) -->
	<FocusModel>sloppy</FocusModel>

	<!-- The snap mode (none, screen, or border) -->
	<SnapMode distance="10">border</SnapMode>

	<!-- The move mode (outline or opaque) -->
	<MoveMode>opaque</MoveMode>

	<!-- The resize mode (outline or opaque) -->
	<ResizeMode>opaque</ResizeMode>

	<!-- Key bindings -->
	<Key key="Up">up</Key>
	<Key key="Down">down</Key>
	<Key key="Right">right</Key>
	<Key key="Left">left</Key>
	<Key key="h">left</Key>
	<Key key="j">down</Key>
	<Key key="k">up</Key>
	<Key key="l">right</Key>
	<Key key="Return">select</Key>
	<Key key="Escape">escape</Key>

	<Key mask="A" key="Tab">next</Key>
	<Key mask="A" key="F4">close</Key>
	<Key mask="A" key="#">desktop#</Key>
	<Key mask="A" key="F1">root</Key>
	<Key mask="A" key="F2">window</Key>

</JWM>

